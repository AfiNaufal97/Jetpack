<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="20dp"/>
            <solid
                android:color="@color/red"/>
            <stroke
                android:color="@color/red"
                android:width="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:radius="20dp"/>
            <solid
                android:color="@color/black"/>
            <stroke
                android:color="@color/black"
                android:width="5dp"/>
        </shape>
    </item>

</selector>